@model AdvPOS.Models.AccountViewModels.LoginViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <p id="panelHeaderElements"></p>
    
    <ul class="navbar-nav ml-auto">
        <li>
            <div class="form-group" style="margin-top: 8px;">
                <button class="btn btn-xs btn-success"><span>@localizer["Language"] </span><i class="fa fa-flag" aria-hidden="true"></i></button>
            </div>            
        </li>
        <li>
            <div class="form-group">
                @await Html.PartialAsync("_CulturePartial")
            </div>           
        </li>
        <li>
            <form id="frmSignOut">
                <div class="form-group pull-right" style="margin:10px;">
                    <button type="button" onclick="SignOutAction()" id="btnSignOut"
                        class="btn btn-danger btn-xs">@localizer["Sign Out"]</button>
                </div>
            </form>
        </li>
    </ul>
</nav>

<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
