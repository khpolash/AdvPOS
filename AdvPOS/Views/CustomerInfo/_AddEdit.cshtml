@model AdvPOS.Models.CustomerInfoViewModel.CustomerInfoCRUDViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmCustomerInfo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">@localizer["Name"]</label>
                            <div class="col-sm-9">
                                <input asp-for="Name" id="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">@localizer["Company Name"]</label>
                            <div class="col-sm-9">
                                <input asp-for="CompanyName" id="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">@localizer["Type"]</label>
                            <div class="col-sm-9">
                                <select asp-for="Type" asp-items="@ViewBag.GetddlCustomerType" id="Type"
                                    class="form-control" style="width:100%;">
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Phone" class="col-sm-3 col-form-label">@localizer["Phone"]</label>
                            <div class="col-sm-9">
                                <input asp-for="Phone" id="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-sm-3 col-form-label">@localizer["Email"]</label>
                            <div class="col-sm-9">
                                <input asp-for="Email" id="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group row">
                            <label asp-for="Address" class="col-sm-3 col-form-label">@localizer["Address"]</label>
                            <div class="col-sm-9">
                                <textarea asp-for="Address" class="form-control" id="Address"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="AddressPostcode" class="col-sm-3 col-form-label">@localizer["AddressPostcode"]</label>
                            <div class="col-sm-9">
                                <textarea asp-for="AddressPostcode" class="form-control"
                                    id="AddressPostcode"></textarea>
                                <span asp-validation-for="AddressPostcode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 text-left">
                                <input asp-for="UseThisAsBillingAddress" type="checkbox" id="UseThisAsBillingAddress" />
                                <span>@localizer["Use this as billing and shipping address"]</span>
                            </div>
                        </div>
                        <div id="divBillingAddress">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@localizer["Billing Address"]</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="BillingAddress" class="form-control"
                                        id="BillingAddress"></textarea>
                                    <span asp-validation-for="BillingAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@localizer["AddressPostcode"]</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="BillingAddressPostcode" class="form-control"
                                        id="BillingAddressPostcode"></textarea>
                                    <span asp-validation-for="BillingAddressPostcode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">@localizer["Notes"]</label>
                            <div class="col-sm-9">
                                <textarea asp-for="Notes" class="form-control" id="Notes"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <button type="button" onclick="Save()" class="btn btn-info">@localizer["Save"]</button>
                                <button type="button" id="btnClose" class="btn btn-danger"
                                    data-dismiss="modal">@localizer["Close"]</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script type="text/javascript">
    $("#CustomerTypeId").select2();

    $(document).ready(function () {
        var _divBillingAddress = document.getElementById("divBillingAddress");
        _divBillingAddress.style.display = "none";
        $("#UseThisAsBillingAddress").click();
    });

    $("body").on("click", "#UseThisAsBillingAddress", function () {
        var _divBillingAddress = document.getElementById("divBillingAddress");

        if ($('#UseThisAsBillingAddress').is(":checked")) {
            _divBillingAddress.style.display = "none";
        }
        else {
            _divBillingAddress.style.display = "block";
        }
    });
</script>