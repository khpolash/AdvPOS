@model AdvPOS.Models.CurrencyViewModel.CurrencyCRUDViewModel

<div class="row">
    <div class="col-md-12">
        <form asp-action="SetDefaultCurrency">
            <div class="form-group">
                <label>Select Currency</label>
                <select asp-for="Id" id="ddlCurrency" asp-items="@ViewBag.ddlCurrency" class="form-control" required>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-info">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>

