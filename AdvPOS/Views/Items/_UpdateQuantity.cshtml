@model AdvPOS.Models.ItemsViewModel.ItemsCRUDViewModel

<div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="UpdateQuantity">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-sm-6">
                        <table class="BlueGreen">
                            <tr>
                                <th>ID</th>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>@Model.Code</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Company Name</th>
                                <td>@Model.SupplierId</td>
                            </tr>
                            <tr>
                                <th>Measure</th>
                                <td>@Model.MeasureId</td>
                            </tr>
                            <tr>
                                <th>Unit Price</th>
                                <td>@Model.CostPrice</td>
                            </tr>
                            <tr>
                                <th>Sell Price</th>
                                <td>@Model.NormalPrice</td>
                            </tr>
                            <tr>
                                <th>Old Unit Price</th>
                                <td>@Model.OldUnitPrice</td>
                            </tr>
                            <tr>
                                <th>Old Sell Price</th>
                                <td>@Model.OldSellPrice</td>
                            </tr>
                            <tr>
                                <th style="background-color:rebeccapurple">Quantity in Stock</th>
                                <td>@Model.Quantity</td>
                            </tr>
                            <tr>
                                <th>Update Qnt Type</th>
                                <td>@Model.UpdateQntType</td>
                            </tr>
                            <tr>
                                <th>Update Qnt Note</th>
                                <td>@Model.UpdateQntNote</td>
                            </tr>
                            <tr>
                                <th>Created Date</th>
                                <td>@Model.CreatedDate</td>
                            </tr>
                            <tr>
                                <th>Modified Date</th>
                                <td>@Model.ModifiedDate</td>
                            </tr>
                            <tr>
                                <th>Created By</th>
                                <td>@Model.CreatedBy</td>
                            </tr>
                            <tr>
                                <th>Modified By</th>
                                <td>@Model.ModifiedBy</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="AddNewQuantity" class="control-label"></label>
                            <input asp-for="AddNewQuantity" value="" class="form-control" type="number" min="0" />
                            <span asp-validation-for="AddNewQuantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdateQntType" class="control-label"></label>
                            <input asp-for="UpdateQntType" value="" class="form-control" type="text" placeholder="New Stock" />
                            <span asp-validation-for="UpdateQntType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdateQntNote" class="control-label"></label>
                            <input asp-for="UpdateQntNote" value="" class="form-control" type="text" placeholder="New Stock Note" />
                            <span asp-validation-for="UpdateQntNote" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-info">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>              
            </form>
        </div>
    </div>
</div>

<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
