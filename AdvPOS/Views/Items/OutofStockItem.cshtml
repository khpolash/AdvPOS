@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div class="wrapper">
    <div class="panel panel-hash">
        <div class="panel-heading"><h4><b>@localizer["Out of Stock Item"]</b></h4></div>
        <div class="panel-body scroll panel-height">
            <table id="tblOutofStockItem" class="BlueGreen" style="width:100%">
                <thead>
                    <tr>
                        <th>@localizer["Id"]</th>
                        <th>@localizer["Name"]</th>
                        <th>@localizer["Image"]</th>
                        <th>@localizer["SKU"]</th>
                        <th>@localizer["Categorie"]</th>
                        <th>@localizer["Supplier"]</th>
                        <th>@localizer["Measure"]</th>
                        <th>@localizer["Cost Price"]</th>
                        <th>@localizer["Sell Price"]</th>
                        <th style="background-color:rebeccapurple">@localizer["Quantity"]</th>
                        <th>@localizer["Created Date"]</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<partial name="~/Views/UIComponents/_SmallModal.cshtml" />
<partial name="~/Views/UIComponents/_BigModal.cshtml" />

<style>
    .panel-heading {
        padding: 0px 0px 0px 5px;
    }

    .panel-body {
        padding: 5px;
    }

    .h4 {
        margin-top: 1px;
        margin-bottom: 1px;
    }
</style>

<script src="~/lib/sweetalert2/sweetalert2.js"></script>
<script src="~/js/Item/Item_CRUD.js"></script>
<script src="~/js/Item/OutofStockItem_Datatable.js"></script>

<link href="~/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/DataTables/datatables.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>


@*Button*@
<link href="https://cdn.datatables.net/buttons/1.5.4/css/buttons.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/buttons/1.5.4/js/dataTables.buttons.min.js"></script>