@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div class="wrapper">
    <div class="panel panel-hash">
        <div class="panel-heading">
            <div class="row">
                <h4 class="col-md-11"><b>@localizer["Low In Stock"]</b></h4>
                <div class="col-md-1">
                </div>
            </div>           
        </div>
        <div class="panel-body scroll panel-height">
            <table id="tblLowInStock" class="BlueGreen" style="width:100%; border-collapse:collapse" border="1">
                <thead>
                    <tr>
                        <th>@localizer["Id"]</th>
                        <th>@localizer["Name"]</th>
                        <th>@localizer["Image"]</th>
                        <th>@localizer["SKU"]</th>
                        <th>@localizer["Categorie"]</th>
                        <th>@localizer["Supplier"]</th>
                        <th>@localizer["Measure"]</th>
                        <th>@localizer["Cost Price"]</th>
                        <th>@localizer["Sell Price"]</th>
                        <th style="background-color:rebeccapurple">@localizer["Quantity"]</th>
                        <th>@localizer["Created Date"]</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>       
    </div>
</div>

<partial name="~/Views/UIComponents/_SmallModal.cshtml" />
<partial name="~/Views/UIComponents/_BigModal.cshtml" />

<style>
    .panel-heading {
        padding: 0px 0px 0px 5px;
    }

    .panel-body {
        padding: 5px;
    }

    .h4 {
        margin-top: 1px;
        margin-bottom: 1px;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .form-control {
        border-radius: 5px;
        box-shadow: none;
        border-color: green;
    }
</style>

<script src="~/js/Item/Item_CRUD.js"></script>
<script src="~/js/Item/LowInStock_Datatable.js"></script>

